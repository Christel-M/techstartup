<div class="message-board">
<% if @existing_chats_users %>
   <% @existing_chats_users.each do |other_user| %>
    <% if other_user != current_user %>
    <% @other_user = other_user%>
    <% end %>
    <% end %>
    <ul>
        <% @chats.uniq.each do |chat|%>
        <h3>Active Messages With:</h3>
        <li>
        <%= link_to(user_chats_path(current_user, :other_user => @other_user.id, :post => chat.post.id ), method: :post) do %>
        <%if chat.post != nil%>
        <%="Message from: #{@other_user.username} regarding #{chat.post.name}" %>
        <% end %>
      </li>
      <% end %>
      <% end %>
</ul>
<% else %>
<h3>There are no messages at this time</h3>
<% end %>
</div>
