

<h1> Edit User </h1> <br>

<%= form_for(@user) do |u|%>

<label> Enter first name:</label><br>
<%= u.text_field :first_name%><br>

<label> Enter last name:</label><br>
<%= u.text_field :last_name %><br>

<label> Enter an email:</label><br>
<%= u.email_field :email%><br>

<label> Enter an email:</label><br>
<%= u.email_field :email%><br>

<label> Enter a username:</label><br>
<%= u.text_field :username %><br>

<label> Enter password:</label><br>
<%= u.password_field :password %><br>

<label> Enter password:</label><br>
<%= u.password_field :password_confirmation %><br>

<label> Select your location:</label><br>
<%= u.select :location, ["Brooklyn", "Queens", "Manhattan", "Bronx", "Staten Island"]%><br>

<label>Upload A Profile Picture:</label>
<%= u.file_field :picture, direct_upload: true %>

<p>
<%= u.submit %>
</p>

<% end %>
