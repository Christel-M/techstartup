<div class="post-grid">
  <div>
    <%=@post.picture.attachment.nil? ? content_tag(:div, "#{@post.name.first}", class: "default"): image_tag(@post.picture)%>
  </div>
  <div>
    <h1 class="center"><%=@post.name.upcase%></h1>
    <span><strong>By: </strong><%=@post.user.username.capitalize%></span> &nbsp
    <span><strong>Created: </strong><%=@post.created_at.strftime('%b %d, %C%y')%></span>
    <p><strong>Status: </strong><%=@post.status.capitalize%></p>
    <p><strong>Description: </strong><%=@post.description%></p>
    <p><strong>Location: </strong><%=@post.user.location.name.capitalize%></p>
    <% tags = @post.tags.split(" ").each do |tag| %>
    <% t = tag.sub('#','') %>
    <a href="/?search=%23<%= t %>&submit=Search"><%=tag%></a>
    <% end %>
  </div>
</div>

<div class="related-posts">
  <div>

  </div>
</div>
