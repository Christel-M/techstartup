<h1> Edit Post </h1><br>

<%= form_for(@post) do |post| %>


<label> Enter a title for your post: </label><br>
<%= post.text_field :name %> <br>

<label>Type out a short description: </label><br>
<%= post.text_field :description %> <br>

<label>Put some tags for your item: </label> <br>
<%= post.text_field :tags %> <br>

<p>
  <%= post.submit %>
</p>

<% end %>
